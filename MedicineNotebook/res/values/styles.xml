<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="NomalStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="ListViewStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <style name="ListViewHeadStyle">
        <item name="android:background">@color/list_default</item>
    </style>
    <style name="ListViewHeadTextStyle_land">
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/list_header</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ListViewHeadTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/list_header</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ListViewDetaileStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    <style name="ListViewDetaileStyle_land">
        <item name="android:textSize">26sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>
    <style name="DialogDetaileViewStyle_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dialog_detaile_colname</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="DialogDetaileViewStyle_middle_title">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/dialog_detaile_middle_title</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="DialogDetaileViewStyle_data">
        <item name="android:textSize">24sp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <style name="TableListStyle">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#FFFF99</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="list_footerStyle">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="nomalStyle">
        <item name="android:textSize">30sp</item>
    </style>

</resources>
