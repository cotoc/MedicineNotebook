<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_holder"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtVw_list_id"
            style="@style/NomalStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No.01"
            android:textColor="@color/dark_blue"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtVw_med_name"
            style="@style/NomalStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="ﾛｷｿﾆﾝ錠" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:orientation="horizontal" >

	    <ToggleButton
	        android:id="@+id/toggle_alermon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:background="@drawable/custom_togglebutton"
	        android:clickable="false"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:textOff=" "
	        android:textOn=" "
	        android:visibility="visible" />

	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp"
	        android:orientation="vertical" >

	        <TextView
	            android:id="@+id/txtVw_med_timezone"
	            style="@style/NomalStyle"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:singleLine="true"
	            android:text="朝/昼/夜/就寝前"
	            android:textColor="@color/gray"
	            android:textSize="15dp" />

		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal">

			    <TextView
			        android:id="@+id/txtVw_med_timing"
			        style="@style/NomalStyle"
			        android:layout_width="wrap_content"
			        android:layout_height="fill_parent"
			        android:text="食後"
			        android:textColor="@color/gray"
			        android:textSize="15dp" />

			    <TextView
			        android:id="@+id/txtVw_med_dose"
			        style="@style/NomalStyle"
			        android:layout_width="wrap_content"
			        android:layout_height="fill_parent"
			        android:text="１錠"
			        android:textColor="@color/gray"
			        android:textSize="15dp" />

			    <TextView
			        android:id="@+id/txtVw_med_total"
			        style="@style/NomalStyle"
			        android:layout_width="wrap_content"
			        android:layout_height="fill_parent"
			        android:text="７日分"
			        android:textColor="@color/gray"
			        android:textSize="15dp" />

			</LinearLayout>
		</LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="　" >
        </TextView>

        <CheckBox
            android:id="@+id/chkDelete"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="invisible" />

	</LinearLayout>
</LinearLayout>